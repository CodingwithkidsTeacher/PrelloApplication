@model Prello.Models.Project

@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="custom-text">Update Project:</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post" asp-action="Edit">
        <input type="hidden" asp-for="Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Description"></label>
            </div>
            <div class="col-6">
                <input asp-for="Description" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="Status"></label>
            </div>
            <select class="col-6" asp-for="Status">
                <option value="">Select a status</option>
                <option value="Not Started"> Not Started </option>
                <option value="In Progress">In Progress </option>
                <option value="Complete">Complete</option>
            </select>
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="DueDate"></label>
            </div>
            <div class="col-6">
                <input asp-for="DueDate" class="form-control" />
            </div>
            <span asp-validation-for="DueDate" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-3">
                <input type="submit" value="Update" class="btn btn-info form-control" />
            </div>
            <div class="col-3">
                <a asp-action="Index" class="btn btn-secondary form-control">Back to Projects List</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


